// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category { 
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @unique
  path      String   @unique
  description String
  image     String
  products Product[]
}

model Product {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String   @unique
  path      String   @unique
  type      String
  sku       String
  description String
  categories Category[]
  price     Float 
  thumbnail String
}

